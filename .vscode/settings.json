{
  "C_Cpp.default.compilerPath": "/usr/bin/g++",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}",
    "${workspaceFolder}/build",
    "${workspaceFolder}/libs",
    "${workspaceFolder}/libs/imgui",
    "${workspaceFolder}/libs/libgfx",
    "${workspaceFolder}/libs/glad-4.3/include"
  ],
  "cmake.configureOnOpen": false,
  "files.associations": {
    "*.rc": "cpp",
    "chrono": "cpp",
    "iostream": "cpp"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "build": true,
    "build-*": true
  }
}